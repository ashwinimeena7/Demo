<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog class="messageClass" title="Remarks" type="Message">
		<content>
			<TextArea rows="3" class="textAreaClass" maxLength="50" liveChange="onRemarks" width="100%" id="idRemarks" placeholder="Enter Remarks (No special characters)"></TextArea>
		</content>
		<beginButton>
			<Button class="msgButtonClass" text="Submit" press="onSubmit"></Button>
		</beginButton>
		<endButton>
			<Button class="msgButtonClass" text="Cancel" press="onExit"></Button>
		</endButton>
	</Dialog>
</core:FragmentDefinition>